.poster {
  width: 100vw;
  height: calc(100vh - 48px);
  position: relative;
  box-sizing: border-box;
}

.poster image {
  display: block;
  width: 100%;
  height: 100%;
}

.poster canvas {
  position: absolute;
  right: 20px;
  bottom: 68px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
  width: 200rpx;
  height: 200rpx;
}

.poster .qr-code {
  position: absolute;
  right: 20px;
  bottom: 68px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
  width: 200rpx;
  height: 200rpx;
}

.poster .qr-code image {
  display: block;
  width: 100%;
  height: 100%;
}
