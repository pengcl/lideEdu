.poster {
  width: 100vw;
  height: 100vh;
  position: relative;
  box-sizing: border-box;
  padding-bottom: 48px;
}

.poster image {
  display: block;
  width: 100%;
  height: 100%;
}

.poster canvas {
  position: absolute;
  right: 20px;
  bottom: 68px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
  width: 200rpx;
  height: 200rpx;
}
