/**index.wxss**/

.filter {
  position: absolute;
  right: 0;
  z-index: 2;
  top: 50rpx;
  background-color: orange;
  color: #fff;
  font-size: 14px;
  overflow: hidden;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}

.filter .weui-cell {
  padding: 15rpx 20rpx;
  line-height: 1;
}

.filter .weui-cell .weui-cell__ft_in-access::after {
  border-color: #fff;
}

.userinfo {
  position: relative;
  display: block;
  width: 100%;
  min-height: 200rpx;
  overflow: hidden
}

.userinfo .bg {
  background: #f26549;
  border-bottom-left-radius: 30px;
  border-bottom-right-radius: 30px;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: -1;
}

.userinfo .userinfo-container {
  margin: 30rpx;
  min-height: 200rpx;
  box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
  background: #fff;
}

.userinfo .userinfo-container .userinfo-container_hd {
  display: flex;
  padding: 40rpx 30rpx 20rpx 40rpx;
  align-items: center;
}

.userinfo .userinfo-container .userinfo-container_hd .avatar {
  width: 68rpx;
  height: 68rpx;
  background: #f26549;
  overflow: hidden;
  border-radius: 100%;
  padding: 10rpx;
  box-sizing: border-box;
}

.userinfo .userinfo-container .userinfo-container_hd .avatar image {
  display: block;
  width: 100%;
  height: 100%;
}

.userinfo .userinfo-container .userinfo-container_hd .mobile {
  padding: 0 20rpx;
  font-size: 15px;
}

.userinfo .userinfo-container .userinfo-container_hd .share {
  flex: 1;
  padding: 0 20rpx;
  position: relative;
  background-color: transparent;
}

.userinfo .userinfo-container .userinfo-container_hd .share::after {
  display: none;
}

.userinfo .userinfo-container .userinfo-container_hd .share::before {
  content: '';
  position: absolute;
  left: 0;
  height: 100%;
  width: 1rpx;
  border-left: 1rpx solid #999;
}

.userinfo .userinfo-container .userinfo-container_hd .share image {
  display: block;
  width: 32rpx;
  height: 32rpx;
}

.userinfo .userinfo-container .userinfo-container_bd {
  overflow: hidden;
}

.userinfo .userinfo-container .userinfo-container_bd .txt {
  text-align: center;
}

.userinfo .userinfo-container .userinfo-container_bd .txt .text {
  display: inline-block;
  font-size: 14px;
  color: #999;
  vertical-align: middle;
  margin: 0 10rpx;
}

.userinfo .userinfo-container .userinfo-container_bd .txt .line {
  display: inline-block;
  width: 40rpx;
  height: 2rpx;
  background: #999;
  vertical-align: middle;
}

.userinfo .userinfo-container .userinfo-container_bd .timer {
  display: flex;
  margin: 30rpx 15rpx 20rpx 15rpx;
}

.userinfo .userinfo-container .userinfo-container_bd .timer .count {
  flex: 1;
  text-align: center;
}

.userinfo .userinfo-container .userinfo-container_bd .timer .dot {
  text-align: center;
  color: #999;
}

.userinfo .userinfo-container .userinfo-container_bd .timer .count .num {
  width: 2em;
  display: inline-block;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5) inset;
  -moz-box-shadow:0 0 10rpx rgba(0, 0, 0, 0.5) inset;
  -webkit-box-shadow:0 0 10rpx rgba(0, 0, 0, 0.5) inset;
  border-radius: 6rpx;
  font-size: 24px;
  color: #999;
}

.userinfo .userinfo-container .userinfo-container_bd .timer .count .label {
  font-size: 12px;
  color: #999;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.news .weui-panel::before, .news .weui-panel::after {
  display: none;
}

.news .weui-panel .weui-media-box {
  margin: 20rpx 30rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
  border-radius: 6rpx;
}

.news .weui-panel .weui-media-box:first-child {
  margin: 10rpx 30rpx 20rpx;
}

.news .weui-panel .weui-media-box__hd_in-appmsg {
  width: auto;
  height: auto;
  font-size: 13px;
  position: relative;
  border-right: 1px solid #999;
  line-height: 30px;
  margin-right: 10px;
}

.news .weui-panel .weui-media-box__hd_in-appmsg .weui-media-box__thumb {
  width: 20px;
  height: 20px;
  margin-right: 5px;
  vertical-align: middle;
}

.news .weui-panel .weui-media-box__hd_in-appmsg text {
  line-height: 30px;
  vertical-align: middle;
  color: #f26549;
  margin-right: 8px;
}

.news .weui-media-box__ft_in-appmsg .button {
  font-size: 10px;
  padding: 6rpx 10rpx;
  background-color: #f26549;
  color: #fff;
  border-radius: 30rpx;
}

.news .weui-media-box {
  padding: 10px;
}

.news .weui-media-box .weui-media-box__bd_in-appmsg {
  height: 32px;
  overflow: hidden;
}

.news .weui-media-box__title {
  font-size: 13px;
  color: #666;
}

.news .weui-media-box__desc, .news .weui-media-box__info {
  font-size: 10px;
  color: #999;
  margin-top: 8rpx;
  padding-bottom: 0;
}

.news-item {
  transition: all 300ms ease-in-out;
  display: block;
  opacity: 1;
}

.news-item-hide {
  opacity: 0;
}
