.list {
  margin-top: 15px;
}

.project-list {
  display: flex;
  padding: 10px 0;
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.project-items {
  flex: 1;
  margin-left: 9px;
}

.project-item.more-item {
  display: none
}

.show .project-item.more-item{
  display: inline-block;
}

.project-item {
  margin: 6px;
  display: inline-block;
  font-size: 14px;
  color: #666;
}

.project-item.selected {
  color: #3e9bee;
}

.project-more {
  width: 20px;
  margin: 6px 15px 6px 15px;
}

.project-more image {
  display: block;
  width: 20px;
  height: 20px;
}
.button.need {
  background-color: #f26549 !important;
}