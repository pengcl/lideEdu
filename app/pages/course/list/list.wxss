.list {
  margin-top: 15px;
}

.weui-navbar__item_search {
  flex: 1;
  text-align: right;
  align-self: center;
}

.weui-search-bar__form {
  position: absolute;
  right: 16px;
  top: 0;
  width: 130px;
}

.weui-search-bar__label {
  background-color: #eee;
  border-radius: 30px;
}

.project-list {
  display: flex;
  margin-top: 10px;
}

.project-items {
  flex: 1;
  margin-left: 9px;
}

.project-item.more-item {
  display: none
}

.show .project-item.more-item{
  display: inline-block;
}

.project-item {
  margin: 6px;
  display: inline-block;
  font-size: 14px;
  color: #666;
}

.project-item.selected {
  color: #f26549;
}

.project-more {
  width: 20px;
  margin: 6px 15px 6px 15px;
}

.project-more image {
  display: block;
  width: 20px;
  height: 20px;
}
