.profile {
  margin: 50px 15px 15px;
  border-radius: 10px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
  position: relative;
  min-height: 10px;
  text-align: center;
  padding:40px 15px 15px;
}

.avatar {
  display: block;
  width: 60px;
  height: 60px;
  border: 3px solid #fff;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.4);
  border-radius: 100%;
  position: absolute;
  left: 50%;
  top: -30px;
  transform: translateX(-50%);
}

.avatar image {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.title {
  font-size: 10px;
}

.desc {
  font-size: 11px;
  color: #999;
  margin: 10px 30px 0;
}

.contact {
  margin: 15px 15px 60px;
  border-radius: 10px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
  overflow: hidden;
}

.weui-media-box__title {
  font-size: 15px;
  margin-bottom: 0;
}

.weui-media-box__desc {
  font-size: 13px;
}